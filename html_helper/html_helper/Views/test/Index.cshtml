
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <table class="table table-striped">
        @using (Html.BeginForm())
        {
            <tr>
                <td>Textbox</td>
                <td>@Html.TextBox("Username")</td>
            </tr>

            <tr>
                <td>Textarea</td>
                <td>@Html.TextArea("UserAddress")</td>
            </tr>

            <tr>
                <td>Password</td>
                <td>@Html.Password("UserPassword")</td>
            </tr>

            <tr>
                <td>Hidden Field</td>
                <td>@Html.Hidden("UserID")</td>
            </tr>

            <tr>
                <td>CheckBox</td>
                <td>@Html.CheckBox("Check")</td>
            </tr>

            <tr>
                <td>RadioButton</td>
                <td>@Html.RadioButton("Gender", "Male", true)</td>
                <td>@Html.RadioButton("Gender", "Female", true)</td>
            </tr>
            <tr>
                <td>ListBox</td>
                <td>
                    @Html.ListBox("ListName", new List<SelectListItem> {
       new SelectListItem {Text="one",Value="1" },
       new SelectListItem {Text="Two",Value="2" },
       new SelectListItem {Text="Three",Value="3" },
   })

                </td>
            </tr>
            <tr>
                <td>DropDown List</td>
                <td>
                    @Html.DropDownList("DropCountry", new List<SelectListItem>
   {
       new SelectListItem {Text="Select",Value="0" },
       new SelectListItem {Text="Pakistan",Value="1" },
       new SelectListItem {Text="USA",Value="2" },
   })
                </td>
            </tr>

            <tr>
                <td>Display Name</td>
                <td>@Html.DisplayName("Display Name")</td>
            </tr>

            <tr>
                <td>Editor</td>
                <td>@Html.Editor("EditID")</td>
            </tr>
        }
    </table>
</div>