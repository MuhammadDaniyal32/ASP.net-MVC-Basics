@model InventoryManagmentSystem2.Models.category

@{
    ViewBag.Title = "Create";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h1>Create Category</h1>
        <hr />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.cat_name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
                    <br />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.cat_status, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.cat_status, ViewBag.abc as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cat_status, "", new { @class = "text-danger" })
                    <br />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <input type="submit" value="Create" class="btn btn-default btn-block btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>