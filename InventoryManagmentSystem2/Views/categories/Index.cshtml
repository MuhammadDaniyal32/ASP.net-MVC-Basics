@model IEnumerable<InventoryManagmentSystem2.Models.category>

@{
    ViewBag.Title = "Index";
}
        <h1>Category</h1>
        <hr />
        <p>
            @if (User.IsInRole("Admin")||User.IsInRole("User")||User.IsInRole("Developer"))
            {
                @Html.ActionLink("Create New", "Create")
            }

        </p>
        <table class="table table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.cat_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cat_status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.cat_name)
                    </td>
                    <td>
                        @{

                            if (item.cat_status == Convert.ToByte(1))
                            {
                                <p>Active</p>
                            }
                            else
                            {
                                <p>Inactive</p>

                            }
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Developer"))
                        {
                            @Html.ActionLink("Edit |", "Edit", new { id = item.cat_id })

                        }

                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Delete |", "Delete", new { id = item.cat_id })
                        }

                        @Html.ActionLink("Details", "Details", new { id = item.cat_id })
                    </td>
                </tr>
            }

        </table>
